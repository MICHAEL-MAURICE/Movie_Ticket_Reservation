
@model Actor
@{
    Layout="~/Views/Shared/_UserLayout.cshtml";
	
		var base64 = "";
		string imgsrc ;
	
}
<div class="hero hero3">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- <h1> movie listing - list</h1>
